<link href="~/CSS/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
<script type="text/javascript" src="~/Scripts/bootstrap-datetimepicker.js" charset="UTF-8"></script>
<script type="text/javascript">
    var code = function() {
        $('.datetimepicker_date').datetimepicker({
            format: "yyyy-mm-dd",
            weekStart: 1,
            minView: 2,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 0,
            pickerPosition: "bottom-right"
        });
        $('.datetimepicker_datetime').datetimepicker({
            format: "yyyy-mm-dd hh:ii:00",
            weekStart: 1,
            minView: 2,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            forceParse: 0,
            showMeridian: 0,
            pickerPosition: "bottom-right"
        });
        $('.datetimepicker_time').datetimepicker({
            format: "hh:ii:00",
            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 1,
            forceParse: 0,
            showMeridian: 0,
            pickerPosition: "bottom-right"
        });
    };
    $(document).ready(function() {
        code();
    });
    $("#addRow").click(function() {
        code();
    });
</script>