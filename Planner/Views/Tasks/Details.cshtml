@{
    ViewBag.Title = "Task details";
}
@model Planner.Models.Database.Task

<header>
    <h2>@ViewBag.Title</h2>
</header>

<br/>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        @Html.Partial("_Details", Model)
        @Html.ActionLink("Edit", "Edit", "Tasks", new {id = @Model.Id}, new {@class = "btn btn-primary btn-sm"})
        @Html.ActionLink("Delete", "Remove", "Tasks", new {id = @Model.Id}, new {@class = "btn btn-danger btn-sm"})
    </div>
</div>