@model Planner.Models.Database.User

<header>
    <h2>Edit</h2>
</header>

<p>Steps to changing your information:</p>
<ol>
    <li>Change <b>either</b> your:</li>
    <ul>
        <li>New password</li>
        <li>Account status (to delete)</li>
    </ul>
    <li>Then, enter your <b>current password</b>.</li>
    <li>Finally, save your changes.</li>
</ol>

<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <h3>Change your password</h3>
        @using (Html.BeginForm("UpdatePassword", "Users", FormMethod.Post, new {@class = "navbar-form pull-right"}))
        {
            <div class="form-group">
                <label for="new_password">Enter your new password:</label>
                <input type="password" id="new_password" name="newPassword" class="form-control" placeholder="New password"/>
            </div>
            <br/>
            <br/>
            <button type="submit" class="btn btn-primary">Submit changes</button>
        }
    </div>
    <div class="col-md-4">
        <h3>Delete your account</h3>
    </div>
</div>